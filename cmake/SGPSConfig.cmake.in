# Installable SGPSConfig.cmake (base file) 
#
# Provides the following package variables:
#
# SGPS_INCLUDE_DIRS
# SGPS_LIBRARIES
#
# Requires the following packages to be loaded first:
#
# CUDAToolkit
#


if (NOT CUDAToolkit_FOUND AND NOT SGPS_IGNORE_MISSING_CUDA)
	message(SEND_ERROR "SGPS requires the CUDAToolkit package in order to build build. To suppress this error, set the variable SGPS_IGNORE_MISSING_CUDA.")
endif()

cmake_path(GET CMAKE_CURRENT_LIST_FILE PARENT_PATH SGPSCMakeDir)

if (NOT TARGET sbel_gpu_physics AND NOT SGPS_BINARY_DIR)
	include("${SGPSCMakeDir}/SGPSTargets.cmake")
endif()

set(SGPS_INCLUDE_DIRS @CONF_INCLUDE_DIRS@)
set(SGPS_LIBRARIES SGPS::sbel_gpu_physics)

