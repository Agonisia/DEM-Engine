# Installable SMUGConfig.cmake (base file) 
#
# Provides the following package variables:
#
# SMUG_INCLUDE_DIRS
# SMUG_LIBRARIES
#
# Requires the following packages to be loaded first:
#
# CUDAToolkit
#


if (NOT CUDAToolkit_FOUND AND NOT SMUG_IGNORE_MISSING_CUDA)
	message(SEND_ERROR "SMUG requires the CUDAToolkit package in order to build build. To suppress this error, set the variable SMUG_IGNORE_MISSING_CUDA.")
endif()

cmake_path(GET CMAKE_CURRENT_LIST_FILE PARENT_PATH SMUGCMakeDir)

if (NOT TARGET simulator_multi_gpu AND NOT SMUG_BINARY_DIR)
	include("${SMUGCMakeDir}/SMUGTargets.cmake")
endif()

set(SMUG_INCLUDE_DIRS @CONF_INCLUDE_DIRS@)
set(SMUG_LIBRARIES SMUG::simulator_multi_gpu)

